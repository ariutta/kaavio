{
  "compilerOptions": {
    "declaration": true,
    "experimentalDecorators": true,
    "inlineSourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "pretty": true
  },
  "include": [
    "src/types.ts",
    "src/index.ts",
    "src/utils/formatClassNames.ts",
    "src/utils/normalizeElementId.ts",
    "src/drawers/edges/index.ts",
    "src/createJson2SvgCLI.tsx",
    "src/Kaavio.ts*",
    "src/components/Marker/helpers.ts",
    "src/components/Filter/*.ts*",
    "src/components/*.ts*",
    "src/cli/*.ts*",
    "src/drawers/*.ts*",
    "src/drawers/**/*.ts*",
    "src/spinoffs/*"
  ],
  "exclude": [
    "dist/**/*",
    "tmp/**/*",
    "node_modules",
    "../../../node_modules"
  ]
}
